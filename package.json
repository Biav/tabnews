{
  "name": "tabnews",
  "version": "1.0.0",
  "description": "Project TabNews using NextJS",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yml up -d",
    "services:down": "docker compose -f infra/compose.yml stop",
    "services:stop": "docker compose -f infra/compose.yml down",
    "lint:prettier:check": "prettier . --check",
    "lint:prettier:fix": "prettier . --write",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run services:up && npm run concurrently:services",
    "concurrently:services": "concurrently -n next,jest --hide next -k --success command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --watch --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky"
  },
  "author": "Bia",
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/testing-library__jest-dom": "^6.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-pg-migrate": "^7.5.2",
    "prettier": "3.2.4",
    "react-test-renderer": "^18.2.0"
  }
}
